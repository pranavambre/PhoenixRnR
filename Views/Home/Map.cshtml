@{
    ViewBag.Title = "About";
}

<link href="~/Content/opensans-font.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />

<link href="~/Content/Site.css" rel="stylesheet" />
<style>

    body {
        font-family: adelle-sans, Avenir, Helvetica, Arial, sans-serif;
    }

    #emergencymap {
        background-color: #ffffff;
        margin-top: 20px;
        box-shadow: 0 3px 40px 0 rgba(0, 0, 0, .15);
    }

    .FDR {
        color: #fff;
    }

        .FDR a {
            color: dodgerblue;
            font-weight: 200;
        }

        .FDR p {
            padding-left: 0px;
            padding-right: 0px;
        }

    .container-crisismap {
        background: #ffca55;
        box-shadow: 0px 8px 20px 0px rgba(0, 0, 0, 0.15);
        -o-box-shadow: 0px 8px 20px 0px rgba(0, 0, 0, 0.15);
        -ms-box-shadow: 0px 8px 20px 0px rgba(0, 0, 0, 0.15);
        -moz-box-shadow: 0px 8px 20px 0px rgba(0, 0, 0, 0.15);
        -webkit-box-shadow: 0px 8px 20px 0px rgba(0, 0, 0, 0.15);
        padding: 40px;
        margin-top: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
    }
</style>
<div class="block-31" style="position: relative;">
    <div class="owl-carousel loop-block-31 ">
        <div class="block-30 block-30-sm item" style="background-image: url('../../images/bg_2.jpg'); background-position: 0% 0px;" data-stellar-background-ratio="0.5">
            <div class="container">
                <div class="row align-items-center justify-content-center text-center">
                    <div class="col-md-8">
                        <h2 class="heading mb-5">Before leaving check the live alerts and warnings for your area and the destination area</h2>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="container-crisismap container">
    <div class="container" id="emergencymap">
        <h2 style="padding-top:15px; text-align:center;">Emergency Maps</h2>
        <div style="padding:20px;">
            <iframe width="100%" height="600px" src="https://google.org/crisismap/australia?hl=en&llbox=-28.23%2C-40.42%2C161.41%2C127.66&t=TERRAIN&layers=14%2C3%2C4%2C7%2C8%2C9%2C10%3A100%2Clayer0%2C1%2C12&embedded=true" style="border: 1px solid #ccc"></iframe>
        </div>
        <div class="row mb-5">
            <div class="col-md-12">
                <h2 style="text-align:center; margin-top:15px;">KNOW THE BUSH FIRE ALERT LEVELS</h2>
            </div>
        </div>

        <div class="row">

            <div class="col-lg-4">
                <div class="post-entry" style="text-align:center">
                    <div class="img-wrap">
                        <img src="~/images/advice-removebg-preview.png" alt="Image placeholder" class="img-fluid img-advice">
                    </div>
                    <div class="content-wrap">
                        <h3><a href="#">ADVICE</a></h3>
                        <p style="justify-content:center;">
                            A fire has started.
                            There is no immediate danger.
                            Stay up to date in case
                            the situation changes.
                        </p>
                    </div>

                </div>
            </div>
            <div class="col-lg-4">
                <div class="post-entry" style="text-align:center;">
                    <div class="img-wrap">
                        <img src="~/images/watchnact-removebg-preview.png" alt="Image placeholder" class="img-fluid img-advice">
                    </div>
                    <div class="content-wrap">
                        <h3><a href="#">WATCH AND ACT</a></h3>

                        <p style="justify-content:center;">
                            There is a heightened level of threat.
                            Conditions are changing and you
                            need to start taking action to protect
                            you and your family.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="post-entry" style="text-align:center">
                    <div class="img-wrap">
                        <img src="~/images/emergency-removebg-preview.png" alt="Image placeholder" class="img-fluid img-advice">
                    </div>
                    <div class="content-wrap">
                        <h3><a href="#">EMERGENCY WARNING</a></h3>

                        <p style="justify-content:center;">
                            An Emergency Warning is the highest level
                            of Bush Fire Alert. You may be in danger
                            and need to take action immediately.
                            Any delay now puts your life at risk.
                        </p>

                    </div>
                </div>

            </div>

        </div>

    </div>
    <p style="font-weight: bold; font-size: 25px; margin-top:10px; text-align:center; color:#555555">Know about the <a href="/Home/NearByHospitals" style="color:#5487fa;">nearby hospitals</a>  around your location for your safety for leaving early and staying safe.</p>
</div>



<script src="~/Scripts/py.js"></script>
@Scripts.Render("~/bundles/jquery")